<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nht.uit.orderdrink.product.view.CreateProductFragment">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="0dp"
        android:layout_weight="10">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>


        //Spinner Category 1
        <LinearLayout
            android:background="@drawable/test_spinner_border"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Spinner
                android:id="@+id/spinnerCategory"
                android:background="@color/white"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9" />
            <ImageView
                android:src="@drawable/drop_dow_icon"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">
                <Button
                    android:id="@+id/btnChooseimg"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_textlabel"
                    android:text="Chọn hình"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgProduct"
                    android:src="@drawable/store"
                    android:layout_width="150dp"
                    android:scaleType="fitXY"
                    android:layout_height="150dp" />
            </FrameLayout>
        </LinearLayout>



        //1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Tên sản phẩm"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:id="@+id/edtProductName"
                android:hint="Product Name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                android:background="@drawable/bg_textview"/>
        </LinearLayout>

        //3
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Mô tả"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:id="@+id/edtDescribeProduct"
                android:layout_weight="3.5"
                android:gravity="center"
                android:textSize="15sp"
                android:hint="Describe Product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@drawable/bg_textview"/>
        </LinearLayout>
        //1
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"

                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Giá"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:inputType="number"
                android:id="@+id/edtPrice"
                android:layout_weight="3.5"
                android:hint="15.000 vnd  (Nhập 15)"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                android:background="@drawable/bg_textview"
                />
        </LinearLayout>

        //1.5
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        //1

        <Button
            android:id="@+id/btnCreateProduct"
            android:text="Tạo sản phẩm"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>

    </LinearLayout>



</LinearLayout>
