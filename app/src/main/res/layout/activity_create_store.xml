<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="horizontal">
    //avata 2
    <ImageView
        android:id="@+id/form_contain_image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title_back"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:src="@drawable/shop_dingteashop"
        android:orientation="vertical">
    </ImageView>
    //form 6

    <LinearLayout
        android:id="@+id/form_to_fill_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/form_contain_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Tên cửa hàng"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <EditText
                android:background="@drawable/bg_textview"
                android:id="@+id/edtstorename"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Store Name"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Số điện thoại"
                android:textSize="15dp"
                android:background="@drawable/bg_textlabel"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <EditText
                android:id="@+id/edtphonenumber_createstore"
                android:layout_width="0dp"
                android:background="@drawable/bg_textview"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:hint="Phone Number"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@drawable/bg_textlabel"
                android:text="Email"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <EditText
                android:id="@+id/edtemail_createstore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:background="@drawable/bg_textview"
                android:hint="Email"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Password"
                android:background="@drawable/bg_textlabel"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <EditText
                android:id="@+id/edtpassword_createstore"
                android:layout_width="0dp"
                android:inputType="numberPassword"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@drawable/bg_textview"
                android:gravity="center"
                android:hint="Password"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Địa Chỉ"
                android:background="@drawable/bg_textlabel"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_textview"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Address"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Giờ làm việc"
                android:background="@drawable/bg_textlabel"
                android:textSize="15dp"
                android:typeface="serif" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_textview"
                    android:id="@+id/txtFrom"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="2.2"
                    android:gravity="center"
                    android:hint="From"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:text="-"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textSize="25dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_textview"
                    android:id="@+id/txtTo"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="2.2"
                    android:gravity="center"
                    android:hint="To"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>

    //button 1

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4">
        <Button
            android:id="@+id/btncreatestor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/form_to_fill_info"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:text="Create"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>