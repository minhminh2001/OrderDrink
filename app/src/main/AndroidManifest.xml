<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nht.uit.orderdrink">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" tools:node="remove"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nht.uit.orderdrink.main.view.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nht.uit.orderdrink.Login.view.LoginActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.nht.uit.orderdrink.signup.view.SignupUserActivity"
            android:label=""
            android:theme="@style/DialogNoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.nht.uit.orderdrink.main.view.MainUserActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.nht.uit.orderdrink.main.view.MainUser2Activity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.nht.uit.orderdrink.signup.view.ChooseSignnup" />
        <activity android:name="com.nht.uit.orderdrink.profile_store.view.CreateStoreActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme" />
        <activity android:name="com.nht.uit.orderdrink.main.view.MainAdminActivity" />
        <activity android:name="com.nht.uit.orderdrink.main.view.MainStoreActivity" />
        <activity
            android:name="com.nht.uit.orderdrink.my_cart.view.DisplayProduct"
            android:label=""
            android:theme="@style/AppTheme.CustomTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.nht.uit.orderdrink.category.view.CreateCategory"
            android:label=""
            android:theme="@style/DialogNoActionBar" />
        <activity
            android:name="com.nht.uit.orderdrink.search_user.view.SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:label=""
            android:theme="@style/Base.V7.Theme.AppCompat.Dialog"
            android:name="com.nht.uit.orderdrink.reset_password.view.ResetPassword">
        </activity>
    </application>

</manifest>